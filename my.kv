
<MyGrid>
    width:1200
    canvas.before:
        Color:
            rgba: 0, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    plt:plot
    rejestracjadanych:rejestracjadanych
#    button1:test_btn1
    button2:test_btn2
    short_btn:short
    long_btn:long
    stopwatch_:stopwatch_
    cur_watter_lvl:cur_watter_lvl
    depression:depression
    cur_time:cur_time
    primary_watter_lvl:primary_watter_lvl
    interwal:interwal
    BoxLayout:


        orientation: 'vertical'
        padding: 25
        spacing: 5
        BoxLayout:
            text: "Button 1"
            size_hint: 1, .08
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    size_hint: .1, 1
                    text:'nr'
                Label:
                    text: 'Many info Many info Many info Many info Many info Many info Many info '
                    size_hint: .75, 1
                Label:
                    canvas.before:root.start_clock()
                    id:cur_time
                    text: 'cur time'
                    size_hint: .15, 1

        BoxLayout:
            text: "Button 2"
            size_hint: 1, .3
            BoxLayout:
                orientation: 'horizontal'
                GridLayout:
                    cols: 2
                    Label:
                        text:'Napiecie akumulatora'
                    Label:
                        text:'volt'
                    Label:
                        text:'Interwal rejestracji danych'
                    Label:
                        id:interwal
                        text:'? sec'
                    Label:
                        text:'Rejestracja danych'
                    Label:
                        id:rejestracjadanych
                        text:'Nieaktywna'
                    Label:
                        text:'Czas trwania rejestracji'
                    Label:
#                        canvas.before:root.stopwatch()
                        id: stopwatch_
                        text:'0:0:0'

                GridLayout:
                    cols: 2
                    Label:
                        text:'Pocz poziom lustra wody'
                    Label:
                        id: primary_watter_lvl
                        text:'2'
                    Label:
                        text:'Biezacy poz lustra wody'
                    Label:
                        id: cur_watter_lvl
                        text:'2.23 mH2O'
                    Label:
                        text:'Depresja'
                    Label:
                        id: depression
                        text:'2.23 mH2O'
                    Label:
                        text:'Przeplyw biez.[-80..-70]m3/h'
                    Label:
                        text:'0.00 m3/h'
                    Label:
                        text:'Licznik wody'
                    Label:
                        text:'0.00 m^3'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
#                        color:1,1,1,1
                        size_hint: 1, .2
                        text: 'Bierzaca konf. studni'
                    GridLayout:
                        size_hint: 1, .4
                        cols: 2
                        Label:
                            text: 'Nazwa studni'
                        Label:
                            text: 'std_grill 228'
                        Label:
                            text: 'Waga impulsu'
                        Label:
                            text: '0.100 m3/imp'
                    BoxLayout:
                        size_hint: 1, .2
                        Label:
                            text: 'Dlugosc impulsu'
                        Button:
                            id: short
                            text: 'Krotki'
#                            on_release: root.set_short()
                        Button:
                            id: long
                            text: 'Dlugi'
#                            on_release: root.set_long()
        BoxLayout:
            canvas.before:root.set_short()
            size_hint: 1, .5
            id:plot

        BoxLayout:
            size_hint: 1, .12
            Button:
                id: test_btn2
                text: 'Start rejestracji danych'
                on_release: root.start_()


<Label>
    color:255/255, 20/255, 20/255, 1 # text
    canvas.before:
        Color:
            rgba:92/255, 181/255, 109/255, 1 #borders etc
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<Button>
    background_color: 25/255, 46/255, 189/255, .5